@import "../common/lib/weui.wxss";
.index{
  position: relative;
}
swiper{
  height:250px;
}

/* 没有找到内容 */
.noContent{
  display: none;
  margin: 0 0;
  padding-top:80px;
  text-align: center;

}
.noContent view{
  font-size: 12px;
  color: #dbdbdb;
  font-weight: bold;
}

.noContent image{
  width:60px;
  height:60px;
}
/* 底线 */
.bottom-line{
  display: none;
  padding-top:10px;
  padding-bottom:10px;
  margin: 0 0;
  text-align: center;

}
.bottom-line view{
  font-size: 12px;
  color: #dbdbdb;
}

.bottom-line image{
  width:25px;
  height:25px;
}
/* 搜索框 */
.search-box{
  position: absolute;
	top: 20px;
  width:100%;
  text-align:center;
  margin-right: auto;
  margin-left: auto;
}
.search-box navigator{
  font-size: 12px;
  margin-left: 30px;
  margin-right: 30px;
  padding-left:10px;
  background-color: #fff;
  line-height: 35px;
  height:35px;
  text-align:left;
  color:#dbdbdb;
  box-shadow: 0px 2px 6px rgba(0,0,0,0.12), 0px 1px 2px rgba(0,0,0,0.24);
}
/* 商品列表 */
.goods-list .list{
  float:left;
  width:50%;
}
.goods-list .list .ll{
  margin: 2px;
  padding: 5px;
  background: #fff
}

.goods-list .list image{
  max-width: 100%;
  max-height: 100%;
 
}
.goods-list .list .title{
  font-size: 12px;
  min-height:45px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.goods-list .list .price{
  color: #F00;
  text-align: center;
}

