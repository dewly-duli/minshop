
/*收货地址*/
.shipping-address{
  display:flex;
  background: #fff;
  height: 60px;
}
.shipping-address .left{
  line-height: 40px;
  width:10%;
  text-align: center;
  color: #515151;
}
.shipping-address .address{
  
  width:80%;
  color: #515151;
  margin-left: 10rpx;
}
.zan-icon-underway{
  color: #cdcdcd;
}
.shipping-address .address .top{
  font-size: 14px;
}
.shipping-address .address .top .top-left{
  float:left;
  margin-top:10px;
}
.shipping-address .address .top .top-right{
  float:right;
}
.shipping-address .address .end{
  font-size: 12px;
  color: #999;
  float:left;
  clear: both;
}
.zan-card__right-col.price{
  font-size:14px;
  color:#d81e06;
  font-weight: bold;
}
.shipping-address .right{
  align-items:center;
  width:10%;
  text-align: center;
  color: #cdcdcd;
  line-height: 40px;
}
.makeorder .edge{
	background: #d81e06;
  height: 2px;
}
.red{
  color: #d81e06;
}
/*底部*/
.car-submit{
  width:100%;
  height:45px;
  line-height: 45px;
  position: fixed;
	left: 0px;
	bottom: 0px;
  display:-webkit-flex;
  background: #fff;
  color: #515151;
  border-top-width: 1px;
	border-top-style: solid;
	border-top-color: #e6e6e6;
  font-size: 12px;
}
.car-submit .generations{
  -webkit-flex: 1;
  
}
.car-submit .generations .lef{
  float:left;
}
.car-submit .generations icon{
  line-height: 70px;
  padding-right:10rpx;
  padding-left: 20rpx;
}
.car-submit .total{
  -webkit-flex: 2;
  text-align: right;
  margin-top:10rpx;
}
.car-submit .total .amount{
  float:right;
  line-height: 35px;
  
}
.car-submit .total .amount view{
  float:left;
  font-size: 12px;
}
.car-submit .total .amount .price{
  font-size: 14px;
  color: #d81e06;
  margin-left:10rpx;
  margin-right: 10rpx;
  font-weight: bold;
}
.car-submit .total .freight{
  float:right;
  clear: both;
  line-height: 12px;
  font-size: 10px;
  color:#cdcdcd;
}
.car-submit .sub{
  margin-left:20rpx;
  padding-left:20rpx;
  -webkit-flex: 1;
  text-align: center;
  background: #d81e06;
  color: #fff;
  font-size: 14px;
}
.car-submit .sub:active{
  background: #B81C05;
}
